<!DOCTYPE html>
<html>
  <head>
    <title>Track Stack</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    "application", media: "all" %>
  </head>

  <body>
    <% if flash[:error] %>
      <div class="flash error">
        <div class="container">
          <div class="row">
            <div class="col-xs-12">
              <p style="margin:0"><strong><%= flash[:error] %></strong></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div class="header">
      <div class="container">
        <div class="row">
          <div class="col-xs-6">
            <h1><a href="/">TrackStack</a></h1>
          </div>
          <div class="col-xs-6 hidden-phone">
            <div class="float-right" style="margin-top: 14px">
              <% if current_user %>
                <img src="<%= current_user.image %>" width="50" height="50" class="avatar float-left">
                <%= form_tag destroy_user_session_path, method: :delete, class: 'float-right' do %>
                  <button class="btn btn-default" style="margin-top: 10px;">Log out</button>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
        <hr>
      </div>
    </div>

    <%= yield %>

    <%= javascript_include_tag "application" %>
    <%= yield :javascripts %>
  </body>
</html>
